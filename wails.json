{
  "$schema": "https://wails.io/schemas/config.v2.json",
  "name": "Loom",
  "outputfilename": "Loom",
  "frontend:install": "npm install",
  "frontend:build": "npm run build",
  "frontend:dev:watcher": "npm run dev",
  "frontend:dev:serverUrl": "auto",
  "info": {
    "icon": "appicon.png"
  },
  "bindings": {
    "go": {
      "package": "time",
      "struct": "Time",
      "ts_type": "string"
    }
  },
  "author": {
    "name": "Mat",
    "email": "mat@yawks.net"
  },
  "macos": {
    "info": {
      "NSUserNotificationsUsageDescription": "Loom needs notification permissions to alert you about new messages."
    }
  }
}
